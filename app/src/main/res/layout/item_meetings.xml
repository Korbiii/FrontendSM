<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:bind="http://schemas.android.com/apk/res-auto"
    >

    <data>
        <import type="android.view.View"/>
        <variable
            name="presenter"
            type="com.android.brogrammers.sportsm8.CalendarTab.DayFragment"/>
        <variable
            name="meeting"
            type="com.android.brogrammers.sportsm8.DataBaseConnection.RetroFitDatabase.DatabaseClasses.Meeting" />
    </data>


    <android.support.v7.widget.CardView
        android:id="@+id/meeting_card"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:onClick="@{()->presenter.startDetailView(meeting)}"
        android:onLongClick="@{(view)->presenter.showDeclineButton(view,meeting)}"
        android:layout_marginTop="8dp"
        android:foreground="?android:attr/selectableItemBackground"
        card_view:cardCornerRadius="8dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <View
                android:id="@+id/indicator_view"
                android:layout_width="match_parent"
                android:layout_height="8dp"
                android:background="@color/red"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/status_badge"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@{meeting.status==1 ? @drawable/confirmed_white : meeting.confirmed>0 ? @drawable/waiting : @drawable/unanswered }"
                />

            <TextView
                android:id="@+id/date_textview"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:text="@{meeting.day,default = `1.1.1111`}"
                android:visibility="visible" />


            <TextView
                android:id="@+id/myTime_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginEnd="4dp"
                android:text="@{`My Time: ` + meeting.mytime,default=MyTime}"
                android:visibility="@{meeting.dynamic==0 ? View.GONE:View.VISIBLE}"
                />

            <TextView
                android:id="@+id/meeting_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                android:text="@{meeting.meetingActivity,default = Activity}"
                android:textSize="28sp" />


            <TextView
                android:id="@+id/ll_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/meeting_name"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="8dp"
                android:text="@{meeting.startTime+` - `+meeting.endTime,default = `HH:mm - HH:mm`}"
                android:textSize="20sp" />


            <View
                android:id="@+id/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/ll_time"
                android:layout_marginEnd="8dp"
                android:layout_marginStart="8dp"
                android:background="@color/lightgrey" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider">


                <Button
                    android:id="@+id/accept_meeting_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{meeting.confirmed==1 ? View.GONE:View.VISIBLE}"
                    android:layout_alignParentEnd="true"
                    android:text="Hab Zeit"
                    android:onClick="@{()->presenter.acceptMeeting(meeting)}"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/decline_meeting_button"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toStartOf="@id/accept_meeting_button"
                    android:visibility="@{meeting.confirmed==1 ? View.GONE:View.VISIBLE}"
                    android:text="Keine Zeit"
                    android:onClick="@{()->presenter.declineMeeting(meeting)}"
                    android:textColor="@color/colorPrimary" />

                <Button
                    android:id="@+id/other_time"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:visibility="@{meeting.confirmed==1||meeting.dynamic==0 ? View.GONE:View.VISIBLE}"
                    android:text="Andere Zeit"
                    android:onClick="@{()->presenter.setOtherTime(meeting)}"
                    android:textColor="@color/colorPrimary" />
            </RelativeLayout>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/divider">

                <Button
                    android:id="@+id/decline_meeting_button_2"
                    style="@style/Base.Widget.AppCompat.Button.Borderless.Colored"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:onClick="@{()->presenter.declineMeeting(meeting)}"
                    android:text="Doch keine Zeit"
                    android:textColor="@color/colorPrimary"
                    android:visibility="gone" />

            </RelativeLayout>


        </RelativeLayout>


    </android.support.v7.widget.CardView>
</layout>