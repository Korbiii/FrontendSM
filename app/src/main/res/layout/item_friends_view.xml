<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/cardview_friends"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground">

    <LinearLayout
        android:id="@+id/friend_request_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:background="@color/cardview_light_background"
            android:elevation="8dp"
            android:layout_height="match_parent">

            <com.makeramen.roundedimageview.RoundedImageView
                android:id="@+id/profile_picture"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:scaleType="centerCrop"
                android:src="@drawable/profilepicture"
                app:riv_border_color="#333333"
                app:riv_corner_radius="30dp"
                app:riv_mutate_background="true" />

            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_picture3"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:src="@drawable/profilepicture"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/profile_picture2"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_margin="16dp"
                android:scaleType="fitStart"
                android:src="@drawable/profilepicture"
                android:visibility="gone" />

            <LinearLayout
                android:id="@+id/linear_friends_tab"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/profile_picture"
                android:layout_marginStart="85dp"
                android:divider="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/username_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="16dp"
                    android:text="Username"
                    android:textColor="@color/darkgrey"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/user_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:layout_marginLeft="16dp"
                    android:text="email@email.com"
                    android:textColor="@color/darkgrey" />
            </LinearLayout>


        </RelativeLayout>

        <LinearLayout
            android:id="@+id/linearL_friendsrequest"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/darkred"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/whiteText"
                android:layout_marginStart="8dp"
                android:text="@string/friendRequest" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="end"
                android:layout_marginEnd="8dp"
                android:layout_height="wrap_content">

                <ImageButton
                    android:id="@+id/decline_friendship"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_clear_white_24dp" />

                <ImageButton
                    android:id="@+id/accept_friendship"
                    android:layout_width="wrap_content"

                    android:layout_margin="8dp"
                    android:layout_height="wrap_content"
                    android:background="@color/transparent"
                    android:src="@drawable/ic_check_white_24dp" />
            </LinearLayout>


        </LinearLayout>
    </LinearLayout>


</android.support.v7.widget.CardView>