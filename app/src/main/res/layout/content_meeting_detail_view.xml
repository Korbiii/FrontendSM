<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/content_meeting_detail_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.android.brogrammers.sportsm8.CalendarViews.MeetingDetailView"
        tools:showIn="@layout/activity_meeting_detail_view">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/time_label_meetingDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Uhrzeit:" />

                <TextView
                    android:id="@+id/time_meeting_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@id/time_label_meetingDetail" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_label_meetingDetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_label_meetingDetail"
                    android:layout_margin="8dp"
                    android:text="Datum:" />

                <TextView
                    android:id="@+id/time_meetingdetail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/time_label_meetingDetail"
                    android:layout_margin="8dp"
                    android:layout_toEndOf="@id/date_label_meetingDetail" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/progress_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="8dp"
                    android:text="Progress:" />

                <com.akexorcist.roundcornerprogressbar.IconRoundCornerProgressBar
                    android:id="@+id/progressbar_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="5dp"
                    app:rcBackgroundColor="@color/lightgrey"
                    app:rcBackgroundPadding="2dp"
                    app:rcIconBackgroundColor="@color/colorPrimaryDark"
                    app:rcIconPadding="5dp"
                    app:rcIconSize="24dp"
                    app:rcIconSrc="@drawable/ic_people_white_24dp"
                    app:rcMax="100"
                    app:rcProgressColor="@color/darkred"
                    app:rcRadius="5dp" />
            </LinearLayout>

            <View
                android:id="@+id/indicator_view"
                android:layout_width="match_parent"
                android:layout_height="4dp"
                android:layout_alignParentBottom="true"
                android:background="@color/colorPrimary" />

            <ListView
                android:id="@+id/listview_meeting_detail"
                android:layout_width="match_parent"
                android:layout_height="250dp"
                android:clickable="false" />
        </LinearLayout>


    </RelativeLayout>
</ScrollView>