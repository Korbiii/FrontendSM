<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_sportart"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.alex.helloworld.Sportart"
    tools:showIn="@layout/activity_sportart">

    <RelativeLayout
        android:id="@+id/layout_laufen"
        android:layout_width="wrap_content"
        android:layout_height="64dp"
        android:visibility="gone">

        <TextView
            android:id="@+id/textview_heute"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:text="@string/text_distance" />

        <TextView
            android:id="@+id/textview_heute2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textview_heute"
            android:layout_toRightOf="@+id/textview_heute"
            android:text="182" />

        <TextView
            android:id="@+id/textview_gelaufGesamt"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_heute"
            android:layout_marginBottom="16dp"
            android:text="@string/text_distance_whole"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_gelaufenGesamt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_heute"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textview_gelaufGesamt"
            android:text="2"
            android:textSize="14sp"
            android:layout_toRightOf="@+id/textview_gelaufGesamt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textview_gelaufenGesamt"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />

    </RelativeLayout>


    <RelativeLayout
        android:id="@+id/layout_top"
        android:layout_width="match_parent"
        android:layout_height="64dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:visibility="gone">

        <ImageView
            android:id="@+id/image_pokal"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="1dp"
            android:src="@drawable/pokal" />

        <TextView
            android:id="@+id/textview_siege"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/image_pokal"
            android:layout_toRightOf="@+id/image_pokal"
            android:text="2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textiview_rang"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/textview_siege"
            android:layout_toRightOf="@id/textview_siege"
            android:text="@string/text_rank" />

        <TextView
            android:id="@+id/textview_rang2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textiview_rang"
            android:layout_toRightOf="@+id/textiview_rang"
            android:text="182" />


        <ImageView
            android:id="@+id/image_iks"
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/image_pokal"
            android:layout_marginTop="1dp"
            android:src="@drawable/rotesx" />

        <TextView
            android:id="@+id/textiview_niederlage"
            android:layout_width="25dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_siege"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/image_iks"
            android:layout_toRightOf="@+id/image_iks"
            android:text="2"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_weltw"
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_siege"
            android:layout_marginLeft="32dp"
            android:layout_marginStart="32dp"
            android:layout_toEndOf="@+id/textiview_niederlage"
            android:layout_toRightOf="@+id/textiview_niederlage"
            android:text="@string/text_worldwide"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/textview_weltweit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textview_rang2"
            android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp"
            android:layout_toEndOf="@+id/textview_weltw"
            android:layout_toRightOf="@+id/textview_weltw"
            android:text="2"
            android:textSize="14sp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/textview_weltw"
            android:layout_marginTop="8dp"
            android:background="@android:color/darker_gray" />


    </RelativeLayout>

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/beachen"
        android:elevation="8dp"
        android:background="@color/colorPrimaryDark"
        android:id="@+id/imageView_sportart"
        android:scaleType="centerCrop"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageView_sportart"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="8dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:orientation="vertical"
        >

        <Button
            android:id="@+id/button_funGame"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:onClick="funGame"
            android:text="@string/button_title_funGame" />

        <Button
            android:id="@+id/button_training"
            android:layout_width="match_parent"
            android:onClick="training"
            android:layout_height="56dp"
            android:text="@string/button_title_trainingsPartner"
            android:visibility="gone" />

        <Button
            android:id="@+id/button_lSpiel"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:onClick="ligaGame"
            android:text="@string/button_title_ligaGame" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/nochEinButton"
            android:text="Noch ein Button" />

    </LinearLayout>
</RelativeLayout>